PROGRAM SCOTT
  IMPLICIT NONE
  
  REAL,DIMENSION(39)::max
  REAL,DIMENSION(39)::min
  REAL::ADD,AVERAGE,AVG1,AVG2,AVl,ADD1,TM
  INTEGER::i
  OPEN(2,FILE="MAXIMUM.txt",STATUS="OLD",ACTION="READ")
  
  READ(2,*,END=20)max
20 CONTINUE
  
  ADD=SUM(max)
  AVERAGE=ADD/39
  AVG1=AVERAGE/39
  CLOSE(2)


  OPEN(8,FILE="ANNUAL_MAXIMUM_AVERAGE.txt",STATUS="OLD")
  WRITE(8,'(F5.2)')AVG1
  CLOSE(8)





  


  OPEN(6,FILE="MINIMUM.txt",STATUS="OLD",ACTION="READ")
  
  READ(6,*,END=30)min
30 CONTINUE
  
  ADD1=SUM(min)
  AVl=ADD1/39
  AVG2=AVl/39
  CLOSE(6)



  
  OPEN(7,FILE="MEAN_TEMP.txt",STATUS="OLD")
  TM=(AVG2+AVG1)/2
  WRITE(7,'(F5.2)')TM
  CLOSE(7)

  
END PROGRAM SCOTT
